<% provide :title, params[:q] + " in New York City" %>
<div class="span8">
	<div id ="event_details">

		<h3><%= params[:q] + " in New York City" %></h3>
	</div>

	<ul class="nav nav-tabs">
	     <% if params[:time] == "today" %> 
	     <li class="active"> 
	     <%else%>
	     <li>
	     <%end%>
	     <%= link_to "Today", :action => "search", :q => params[:q], :time => "today" %> 	
	    </li>
	     <% if params[:time] == "tomorrow" %> 
	     <li class="active"> 
	     <%else%>
	     <li>
	     <%end%>
	    <%= link_to "Tomorrow", :action => "search", :q => params[:q], :time => "tomorrow" %></li>
	     <% if params[:time] == "week" %> 
	     <li class="active"> 
	     <%else%>
	     <li>
	     <%end%>
	    <%= link_to "This week", :action => "search", :q => params[:q], :time => "week" %></li>
	     <% if params[:time] == nil %> 
	     <li class="active"> 
	     <%else%>
	     <li>
	     <%end%>
	    <%= link_to "This month", :action => "search", :q => params[:q] %></li>
	</ul>

<table class="table table-striped">
  <thead>
  </thead>
  <tbody>
<%= render @events %>
  </tbody>
</table>

</div>

<div class="span4">
		<div class="topic_navigation">
		Related:
		
		<br><br>
		<table class="table table-striped">
	  <tbody>
			<% @words.each do |keyword| %>
			<%= link_to keyword[0] + " (" + keyword[1].to_s + ")", :action => "search", :q => keyword[0], :time => params[:time] %> <br><br>
			<%end%>
	  </tbody>

	</table>
	</div>
</div>

