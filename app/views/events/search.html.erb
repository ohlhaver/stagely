
<% provide :title, params[:q] %>
<div class="span8">
<h3>Results for '<%= params[:q]%>'</h3>
<br>
<ul class="nav nav-tabs">
	     <% if params[:time] == nil %> 
	     <li class="active"> 
	     <%else%>
	     <li>
	     <%end%>
	     <%= link_to "Today", :action => "search", :q => params[:q] %> 	
	    </li>
	     <% if params[:time] == "tomorrow" %> 
	     <li class="active"> 
	     <%else%>
	     <li>
	     <%end%>
	    <%= link_to "Tomorrow", :action => "search", :q => params[:q], :time => "tomorrow" %></li>
	     <% if params[:time] == "week" %> 
	     <li class="active"> 
	     <%else%>
	     <li>
	     <%end%>
	    <%= link_to "This week", :action => "search", :q => params[:q], :time => "week" %></li>
	     <% if params[:time] == "month" %> 
	     <li class="active"> 
	     <%else%>
	     <li>
	     <%end%>
	    <%= link_to "This month", :action => "search", :q => params[:q], :time => "month" %></li>
	</ul>

<table class="table table-striped">
  <thead>
  </thead>
  <tbody>
<%= render @events %>
  </tbody>
</table>

</div>

<div class="span4">
	<%= render "layouts/search" %>
		<div class="topic_navigation">
		Subtopics:
		
		<br><br>
		<table class="table table-striped">
	  <tbody>
			<% @words.each do |keyword| %>
			<%= link_to keyword, :action => "search", :q => keyword, :time => params[:time] %> <br><br>
			<%end%>
	  </tbody>

	</table>
	</div>
</div>

