<% provide :title, @artist.name + " in New York City" %>

<div class="span8">
	<div id ="event_details">
	<h3><%= @artist.name %></h3>
	<div class ="tweetit">
			 <a href="https://twitter.com/share" class="twitter-share-button" data-lang="en" data-text="<%=atweet_text(@artist)%>" data-url="<%=shoort_url(request.url)%>" data-counturl="<%=shoort_url(request.url)%>" data-size="small" data-count = "none">Tweet</a>
			<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>	
	</div>
	<div class ="fbbuttons">
			<div class="fb-like" data-href="<%= request.url%>" data-send="true" data-layout="button_count" data-width="50" data-show-faces="true"></div>
	</div>
</div>
<br><br>
	<table class="table table-striped">
	  <tbody>
	    <%= render @events %>
	  </tbody>
	</table>
	<div class="fb-comments" data-href="<%= request.url%>" data-num-posts="10" data-width="545"></div>

<% if current_user && current_user.uid == "568790501" %>
	<div class="form-actions">
	  <%= link_to 'Back', artists_path, :class => 'btn'  %>
	  <%= link_to 'Edit', edit_artist_path(@artist), :class => 'btn' %>
	  <%= link_to 'Delete', artist_path(@artist), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
	</div>
<% end %>
</div>

<div class="span4">
	<div class="related_links">
	Related:
	</div>
	<br>
	<table class="table table-striped">
	  <tbody>
	<%= render @related_events %>
	  </tbody>

	</table>

</div>
