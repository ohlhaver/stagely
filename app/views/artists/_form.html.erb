
<%= simple_form_for @artist, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>

        <%= f.input :name %>
        <%= f.association :subgenre %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', artists_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
